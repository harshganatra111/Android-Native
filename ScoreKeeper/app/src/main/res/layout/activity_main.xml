<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="#f7deed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_margin="20dp"
            android:id="@+id/team_A_score"
            android:textSize="30sp"
            android:layout_gravity="center"/>
        <Button
            android:background="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:onClick="teamAPlusOne"/>
        <Button
            android:background="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:onClick="teamAPlusTwo"/>
        <Button
            android:background="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+3"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:onClick="teamAPlusThree"/>
    </LinearLayout>
    <!--<View-->
        <!--android:background="#000000"-->
        <!--android:layout_width="1dp"-->
        <!--android:layout_height="match_parent">-->
    <!--</View>-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:textSize="20sp"
        android:layout_marginTop="350dp"
        android:onClick="reset"
        android:background="@color/resetButtonColor"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30sp"
            android:id="@+id/team_B_score"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:onClick="teamBPlusOne"/>
        <Button
            android:background="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:onClick="teamBPlusOne"/>
        <Button
            android:background="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:onClick="teamBPlusTwo"/>
        <Button
            android:background="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+3"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:onClick="teamBPlusThree"/>
    </LinearLayout>


</LinearLayout>

